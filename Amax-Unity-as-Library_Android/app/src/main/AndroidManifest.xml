<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.amax.unityaslibrarydemo">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.App"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:process=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.App.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UnityFullscreenActivity"
            android:process=".UnityFullscreenActivity"
            android:exported="true"
            android:label="@string/unity_fullscreen_activity_label"
            android:theme="@style/Theme.App.NoActionBar">
        </activity>

        <activity
            android:name=".UnityAsDialogActivity"
            android:process=".UnityDialogActivity"
            android:exported="true"
            android:label="@string/unity_as_dialog_activity_label"
            android:theme="@android:style/Theme.Dialog"
            android:excludeFromRecents="true">
        </activity>

        <activity
            android:name=".UnityAsViewActivity"
            android:process=".UnityAsViewActivity"
            android:exported="true"
            android:label="@string/unity_as_view_activity_label"
            android:theme="@style/Theme.App.NoActionBar">
        </activity>

    </application>

</manifest>